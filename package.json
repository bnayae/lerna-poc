{
  "name": "root",
  "private": true,
  "scripts": {
    "dev": "lerna run dev  --stream",
    "build": "lerna run --parallel build --stream",
    "app:build": "lerna run --scope={frontend} build --stream --include-dependencies",
    "publish": "lerna run --scope frontend export --stream",
    "new-version": "lerna version --conventional-commit --yes",
    "deploy:production": "now && now alias",
    "lerna-fix": "npx lerna clean -y && npx lerna bootstrap --hoist"
  },
  "devDependencies": {
    "@types/react": "^17.0.15",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.1",
    "lerna": "^4.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
